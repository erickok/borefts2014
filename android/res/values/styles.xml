<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="BoreftsTheme" parent="Theme.Borefts">
		<item name="android:textViewStyle">@style/DefaultTextView</item>
	</style>

	<style name="DefaultTextView">
		<item name="android:textSize">@dimen/text_tab</item>
	</style>

	<style name="DefaultButton">
		<item name="android:background">@drawable/button_default</item>
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:padding">@dimen/margin_half</item>
	</style>
	
	<style name="TransparentButton">
		<item name="android:background">@drawable/button_transparent</item>
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:textColor">#000000</item>
		<item name="android:padding">@dimen/margin_half</item>
	</style>
	
	<style name="Label">
		<item name="android:background">@color/style_unknown</item>
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:padding">@dimen/margin_half</item>
	</style>
	
	<style name="LabelBlue">
		<item name="android:background">@color/blue</item>
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:padding">@dimen/margin_half</item>
	</style>
	
	<!-- Taken from http://stackoverflow.com/questions/10020466/android-4-0-sub-title-section-label-styling -->
	<style name="SectionHeader">
		<item name="android:drawableBottom">@drawable/section_header</item>
		<item name="android:drawablePadding">4dp</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:textColor">@color/darkred</item>
		<item name="android:textSize">14sp</item>
	</style>

</resources>